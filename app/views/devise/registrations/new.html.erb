<% title "New User" %>

<div class="row authentication">
  <div class="col s8 offset-s2">
    <div class="card card-login">
      <div class="card-content">
        <span class="card-title">New User Registration</span>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal mud-form" }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, required: true, autofocus: true, input_html: { :class => 'validate'} %>
          <%= f.input :username, required: true, input_html: { :class => 'validate'} %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { :class => 'validate'} %>
          <%= f.input :password_confirmation, required: true, input_html: { :class => 'validate'} %>
          <div>
            <%= link_to "Sign in", new_user_session_path, :class => "btn-flat" %>
            <%= f.button :submit, "Sign up", :class => "btn right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
