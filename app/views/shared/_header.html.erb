<header >
  <div class="navbar-fixed">
    <nav class="navbar">
      <div class="navbar-wrapper container">
        <%= link_to "Home", root_path, :class => "brand-logo" %>
        <ul id="nav-mobile" class="right">
          <li class="hide-on-med-and-down"><a href="#">AA</a></li>
          <li class="hide-on-med-and-down"><a href="#">BB</a></li>
          <li class="hide-on-med-and-down"><a href="#">CC</a></li>
          <li>
            <a href="#!" data-target="mobile-dropdown" class="dropdown-trigger waves-effect">
              <%= mi.settings %>
            </a>
            <ul id="mobile-dropdown" class="dropdown-content">
              <li class="hide-on-med-and-down"><a href="#">AA</a></li>
              <li class="hide-on-med-and-down"><a href="#">BB</a></li>
              <li class="hide-on-med-and-down"><a href="#">CC</a></li>
            </ul>
          </li>
          <% if user_signed_in? %>
            <li>
              <%= button_to destroy_user_session_path, :class => "act-as-link tooltipped", :method => :delete, :data => {position: "bottom", tooltip: "Logout"} do %>
                <%= mi.assignment_ind %>
              <% end %>
            </li>
					<% end %>
        </ul>
        <a href="#!" data-target="sidenav-left" class="sidenav-trigger left">
          <%= mi.menu.css_class("black-text") %>
        </a>
      </div>
    </nav>
  </div>
  <ul id="sidenav-left" class="sidenav sidenav-fixed">
    <li>
      <%= link_to admin_root_path, :class => "logo-container" do %>
        Admin <%= mi.spa %>
      <% end %>
    </li>
    <li class="no-padding">
      <ul class="collapsible collapsible-accordion">
        <li class="bold waves-effect">
          <a class="collapsible-header">
            Pages
            <%= mi.chevron_left.css_class('chevron') %>
          </a>
          <div class="collapsible-body">
            <ul>
              <li><a href="#" class="waves-effect">Dashboard<%= mi.web %></a></li>
              <li><a href="#" class="waves-effect">Chart<%= mi.list %></a></li>
            </ul>
          </div>
        </li>
      </ul>
    </li>
  </ul>
  <%= render "shared/alert" %>
</header>
